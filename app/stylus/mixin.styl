flex()
	display flex
	justify-content space-between
	flex-wrap wrap
	align-items center
hformbtn()
	width 188px
	height 30px
	border 1px solid #1c5f6d
	border-radius 7px
	box-shadow 0 -1px 0 rgba(#fff, .56) inset, 0 0 5px rgba(#000, .23) inset
	outline none	
	color cl1
	font 0.75em "Droid Sans", Arial, Tahoma, Verdana, sans-serif
	margin-right 10px	
	padding-left 34px
	padding-right 10px
hformsub()
	border-radius 6px
	width 96px
	height 30px
	border 1px solid #045c90
	box-shadow 0 1px 0 rgb(#2f89b5) inset, 0 0 5px rgba(#000, .1) inset
	background linear-gradient(to top, #0273a7 0%, #026a98 100%)
	color #fff
	font 0.75em "Droid Sans", Arial, Tahoma, Verdana, sans-serif
	font-weight bold
	outline none
	cursor pointer
hformimg()
	width 16px
	height 16px
	position absolute
	top 6px
	left 10px
nborder()
	content ""
	border-right 1px solid cl4	
	display block
	height 100%
	position absolute
	top 0%
	left 0%			
ctitle()
	background linear-gradient(to top, #0378a6 0%, #0069aa 100%)
	box-shadow 0 1px 0 rgba(#fff, .3) inset, 0 0 5px rgba(#000, .2) inset
	border-radius 3px 3px 0 0
	padding 10px 20px 6px
	font 1.06em "Myriad Pro"
	font-style italic
	color #fff
	letter-spacing 0.5px	
ctitlebtn()
	hformsub()	
	width 132px
	font 0.75em "Myriad Pro"
	padding-right 22px	
cicon()
	display inline-block
	cursor pointer
	margin-right 15px	
	background url("../images/sprite.png") no-repeat	